    { id: "domains", label: "Ù‚Ù„Ù…Ø±ÙˆÙ‡Ø§", icon: LuGlobe },
    { id: "impact", label: "ØªØ£Ø«ÛŒØ± Ø§Ù‚ØªØµØ§Ø¯ÛŒ", icon: LuTrendingUp },
    { id: "action", label: "Ù…Ø´Ø§Ø±Ú©Øª", icon: LuHandshake },
