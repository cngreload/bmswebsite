                    />
                ) }
            </div>

            { isActive && (
                <motion.div
                    layoutId="wit-dock-dot"
                    className="absolute -bottom-2 w-1.5 h-1.5 rounded-full bg-[#D72638] shadow-[0_0_8px_#D72638]"
                />
            ) }
        </motion.div>
    );
}
