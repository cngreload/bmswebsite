<file path="prisma/schema.prisma">
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ContactType {
  GENERAL
  SALES
  SUPPORT
  PARTNERSHIP
  INVESTMENT
}

enum ContactMessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

model BlogPost {
  id            String     @id @default(cuid())
  title         String
  slug          String     @unique
  summary       String?
  content       String
  coverImageUrl String?
  status        PostStatus @default(DRAFT)
  publishedAt   DateTime?
  readingTime   Int?

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  tags Tag[] // implicit many-to-many

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, publishedAt])
  @@index([categoryId])
}

model Category {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?

  posts BlogPost[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id   String @id @default(cuid())
  name String
  slug String @unique

  posts BlogPost[] // implicit many-to-many

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id          String               @id @default(cuid())
  fullName    String
  email       String
  phone       String?
  subject     String
  message     String
  contactType ContactType          @default(GENERAL)
  status      ContactMessageStatus @default(NEW)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, createdAt])
  @@index([contactType, createdAt])
  @@index([email])
}
</file>

