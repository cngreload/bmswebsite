                    <h1 className="text-xl font-bold text-bms-dark mt-2">{ item.subject }</h1>
                    <p className="text-sm text-odoo-600 mt-1">
                        { item.fullName } • { item.email } { item.phone ? `• ${ item.phone }` : "" } •{ " " }
