    title,
    description,
    uploadDate,
    duration = "PT2M", // Default duration if unknown
}: VideoProps )
{
    const videoRef = useRef<HTMLVideoElement>( null );
    const [ isPlaying, setIsPlaying ] = useState( false );

    // ğŸ§  UX: Toggle Play/Pause
    const togglePlay = () =>
    {
        if ( videoRef.current )
        {
            if ( isPlaying )
            {
                videoRef.current.pause();
            } else
            {
                videoRef.current.play();
            }
            setIsPlaying( !isPlaying );
        }
    };

    // ğŸ§  TRICK: Force browser to render first frame if poster fails
    const videoSrc = src.includes( "#" ) ? src : `${ src }#t=0.001`;

    // ğŸ§  SEO: VideoObject Schema for Google Indexing
    const jsonLd = {
        "@context": "https://schema.org",
        "@type": "VideoObject",
        "name": title,
        "description": description,
        "thumbnailUrl": [ poster ],
        "uploadDate": uploadDate,
        "duration": duration,
        "contentUrl": src,
        "embedUrl": src, // Or the actual page URL if hosted elsewhere
    };

    return (
        <>
            {/* Schema Injection */ }
            <Script
                id={ `video-schema-${ title.replace( /\s+/g, "-" ) }` }
